<%- include('../layouts/header') -%>

<div class="container mt-5">
  <h1>Dashboard</h1>

  <a href="/admin/new-user" class="btn btn-outline-primary">Add New User</a>
  <br /><br />

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Action</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% if(users.length > 0) { for(let i = 0; i < users.length; i++) { %>
      <tr>
        <td><%= users[i].name %></td>
        <td><%= users[i].age %></td>
        <td><%= users[i].mobile %></td>
        <td><%= users[i].email %></td>
        <td>
          <a
            href="/admin/edit-user?id=<%= users[i]._id %>"
            class="btn btn-outline-warning"
            >Edit</a
          >
        </td>
        <td>
          <a
            href="/admin/delete-user?id=<%= users[i]._id %>"
            class="btn btn-outline-danger"
            >Delete</a
          >
        </td>
      </tr>
      <% } } %>
    </tbody>
  </table>

  <a href="/admin/home" class="btn btn-outline-secondary">Go to home</a>
</div>

<%- include('../layouts/footer.ejs') -%>
